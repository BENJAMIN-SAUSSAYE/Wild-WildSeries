{{ form_start(form) }}
<div class="d-flex flex-column justify-content-center m-4 p-4">
	<div class="row mb-3">
		<div class="col">
			{{ form_errors(form) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.number) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.year) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.description) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.program) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			<button class="btn btn-primary px-4">{{ button_label|default('Sauvegarder') }}</button>
		</div>
	</div>
</div>
{{ form_end(form) }}