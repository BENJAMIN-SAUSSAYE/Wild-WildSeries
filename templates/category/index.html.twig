{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Catégories-Index
{% endblock %}

{% block body %}
	<div class="container-fluid m-4 p-4">
		<div class="row d-flex mb-3 p-2">
			<div class="col d-flex align-items-center justify-content-between">
				<h1 class="mx-4">Nos Catégories</h1>
				<a role="button" class="btn btn-sm btn-primary m-2 px-2" href="{{ path('app_category_new') }}">
					<svg class="mx-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewbox="0 0 16 16">
						<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
						<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
					</svg>
					Ajouter
				</a>
			</div>
		</div>
		<div class="row d-flex gx-2 m-3 bg-secondary-light rounded">
			{% for category in categories %}
				<div class="col-sm-3 p-4">
					<a class="px-4 fs-4 fw-bold text-white text-decoration-none" href="{{ path("app_category_show", { categoryName: category.name }) }}">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag" viewbox="0 0 16 16">
							<path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z"/>
							<path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z"/>
						</svg>
						{{ category.name }}
					</a>
				</div>
			{% else %}
				Aucune catégorie trouvée.
			{% endfor %}

		</div>
		<div class="row d-flex fixed-bottom">
			<div class="col p-4 m-4 d-flex align-items-center justify-content-end">
				<a class="bottom text-dark fw-bold px-4 fs-3" href="{{ path('app_index') }}">
					Retour
				</a>
			</div>
		</div>
	</div>
{% endblock %}