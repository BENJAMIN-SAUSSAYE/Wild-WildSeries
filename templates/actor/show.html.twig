{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Acteur-Index
{% endblock %}

{% block body %}
	<h1 class="mx-4 p-2">Acteur</h1>
	<div class="d-flex flex-columns col-lg-11 g-4 p-2 m-2">
		<div class="">
			<div class="text-white bg-dark py-4 d-flex align-items-center justify-content-between">
				<div class="p-2 m-2">
					<p4 class="text-light fw-bold fs-4">{{ actor.name }}</p4>
				</div>
			</div>
			<div class="d-flex flex-md-row flex-column text-white bg-primary-light d-flex align-items-start">
				<img class="w-sm-50 w-100" src="{{ 'https://i.pravatar.cc/150?u=fake@' ~ actor.id }}" alt="{{ 'acteur ' ~ actor.name }}">
				<div class="d-flex flex-column justify-content-end p-2 m-2">
					<h5 class="text-light fw-bold fs-3">Liste des séries</h5>
					<hr class="bg-light">
					<p class="card-text">
						{% for program in actor.programs %}
							<a class="badge rounded-pill bg-dark px-4 py-2 m-3 text-decoration-none" href="{{ path('app_program_show', {'id': program.id}) }}">{{ program.title }}</a>
						{% else %}
							Aucune série associée.
						{% endfor %}
					</p>
				</div>
			</div>
			<div class="d-flex flex-row bg-primary"></div>
		</div>
	</div>
{% endblock %}