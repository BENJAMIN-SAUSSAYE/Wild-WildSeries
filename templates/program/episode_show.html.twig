{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	| Saison
	{{ season.id }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="d-flex flex-column justify-content-center mx-sm-2 m-auto my-sm-2">

			<div class="row mt-5 px-sm-5 gx-0">
				<div class="col-xl-4 d-flex flex-column justify-content-center align-items-center border-end bg-dark text-white p-2">
					<h4 class="fw-bold fs-3 p-2">{{ program.title }}</h4>
					<h5 class="fw-light fs-3 p-2">{{ 'Saison n° ' ~ season.number }}</h5>
				</div>
				<div class="col-xl-8 text-white bg-primary-light">
					<div class="p-4">
						<p class="p-2 fs-4">{{ 'Épisode n° ' ~ episode.number }}</p>
						<h6 class="p-2 text-dark fw-bold">{{ episode.title }}</h6>
						<p class="p-2">{{ episode.synopsis }}</p>
					</div>
				</div>
			</div>

			<div class="row px-sm-5 gx-0">
				<div class="col-sm-4 border-end">
					<div class="d-flex justify-content-between text-white bg-dark p-4 border-top">
						Série
						<div>
							<a class="px-3 py-2 text-decoration-none" href="{{ path("category_show", { categoryName: program.category.name }) }}">{{ program.category.name }}</a>
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag" viewbox="0 0 16 16">
								<path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z"/>
								<path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z"/>
							</svg>
						</div>
					</div>
				</div>
				<div class="col-sm-8">
					<div class="d-flex justify-content-end bg-primary p-4 border-top">
						<a class="bottom text-white fw-bold" href="{{ path('program_index') }}">Retour</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}