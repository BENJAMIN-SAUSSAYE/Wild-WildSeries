{% extends 'visitor_layout.html.twig' %}
{% block title %}
	{{ parent() }}
	| Saison
	{{ season.id }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="d-flex flex-column justify-content-center mx-sm-2 m-auto my-sm-2">
			<div class="row mt-5 px-sm-5">
				<div class="col-xl-12 text-white bg-primary-light">
					<div class="p-4 d-flex flex-column justify-content-start">
						<h1 class="fs-2 px-2 text-white">{{ program.title }}</h1>
						<hr>
					</div>
					<div class="p-4">
						<div class="py-4 d-flex justify-content-between">
							<h3 class="px-4 fs-4 text-light fw-bold">{{ episode.title }}</h3>
							<h2 class="px-4 fs-5 text-dark">{{ 'Épisode n° ' ~ episode.number }}</h2>
						</div>
						<p class="px-4">{{ episode.synopsis }}</p>
					</div>
				</div>
			</div>

			<div class="row px-sm-5">
				<div class="border-end p-0">
					<div class="d-flex justify-content-between text-white bg-dark p-4 border-top">
						Série
						<div>
							<a class="px-3 py-2 text-decoration-none" href="{{ path("app_category_show", { 'categoryName': program.category.name }) }}">{{ program.category.name }}</a>
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag" viewbox="0 0 16 16">
								<path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z"/>
								<path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z"/>
							</svg>
						</div>
					</div>
				</div>
			</div>
			<div class="row px-sm-5">
				<div class="border-end p-0">
					<div class="d-flex align-items-center justify-content-between bg-primary p-4 border border-dark bg-secondart">
						<div>
							{% if app.user %}
								<a role="button" class="btn btn-outline-light text-light bg-dark fw-bold" href="{{ path('app_comment_new', {'episode': episode.id, 'user' : app.user.id }) }}">Ajouter un commentair</a>
							{% endif %}
						</div>
						<div>
							{# <a class="btn btn-outline-secondary text-dark fw-bold" href="{{ path('app_program_index') }}">Retour</a> #}
							<a class="bottom text-white fw-bold" href="{{ path('app_program_index') }}">Retour</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row gx-5 px-sm-5">
			{% for comment in episode.comments|sort|reverse %}
				<div class="col-sm-6 col-md-4 gy-2 gap-2">
					<div class="card comment border border-2 rounded-4 ">
						<div class="card-body">
							<span class="badge rounded-pill text-bg-primary mb-2">{{ comment.id }}</span>
							<h5 class="card-title">{{ comment.author.email}}</h5>
							<p class="card-text max-height-20">{{ comment.comment }}.</p>
							<span class="badge rounded-pill text-bg-dark">Note :
								{{ comment.rate }}</span>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}