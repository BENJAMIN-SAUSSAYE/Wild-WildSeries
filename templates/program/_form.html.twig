{{ form_start(form) }}
<div class="d-flex flex-column justify-content-center m-4 p-4">
	<div class="row mb-3">
		<div class="col">
			{{ form_errors(form) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.title) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.synopsis) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.poster) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{ form_row(form.category) }}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			<button class="btn btn-sm text-nowrap btn-primary m-2 px-2">{{ button_label|default('Enregistrer') }}</button>
		</div>
	</div>
</div>
{{ form_end(form) }}