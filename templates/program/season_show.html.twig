{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	| Saison
	{{ season.id }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<class="d-flexflex-columnjustify-content-centermx-sm-2m-automy-sm-2">
			<div class="row mt-5 px-sm-5 gx-0">
				<div class="col-xl-3 border-end">
					<img class="img-thumbnail w-100 d-inline-block h-100 m-0 p-0" src="{{ asset('build/images/programs/' ~ program.poster) }}" alt="{{ 'poster ' ~ program.title }}">
				</div>
				<div class="col-xl-9 text-white bg-primary-light">
					<div class="p-4">
						<h5 class="text-dark fw-bold fs-3 px-2">{{ program.title }}
							<span class="text-white fs-2 px-2">
								-
								{{ 'Saison n° ' ~ season.number }}<span></h5>
								<hr>
								<p class="p-1 fs-4">{{ season.description }}</p>
								<p class="p-1 fs-4 text-dark fw-bold">{{ 'Année : ' ~ season.year }}</p>
								<p class="p-1 fs-4 text-white fw-light">{{ 'Nombre dépisode(s) : ' ~ season.episodes|length }}</p>
								<div class="container p-2" id="mySeasonGroup">
									{% for episode in season.episodes %}
										<a data-bs-toggle="collapse" href="#collapseEpisode{{ episode.number }}" role="button" aria-expanded="false" aria-controls="collapseEpisode{{ episode.number }}" class="badge rounded-pill bg-dark px-4 py-2 m-3 text-decoration-none">{{ 'Épisode ' ~ episode.number }}</a>
										<div class="collapse fixed-bottom" id="collapseEpisode{{ episode.number }}" data-bs-parent="#mySeasonGroup">
											<div class="card card-body bg-secondary-light text-dark p-2 ">
												<h6>{{ episode.title }}</h6>
												<p class="p-2">{{ episode.synopsis }}</p>
											</div>
										</div>
									{% else %}
										Aucun épisode trouvé.
									{% endfor %}
								</div>
							</p>
						</div>
					</div>
					<div class="row m-0 gx-0">
						<div class="col-sm-3 border-end">
							<div class="d-flex justify-content-between text-white bg-dark p-4 border-top">
								Série
								<div>
									<a class="px-3 py-2 text-decoration-none" href="{{ path("category_show", { categoryName: program.category.name }) }}">{{ program.category.name }}</a>
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag" viewbox="0 0 16 16">
										<path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z"/>
										<path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z"/>
									</svg>
								</div>
							</div>
						</div>
						<div class="col-sm-9">
							<div class="d-flex justify-content-end bg-primary p-4 border-top">
								<a class="bottom text-white fw-bold" href="{{ path('program_index') }}">Retour</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}