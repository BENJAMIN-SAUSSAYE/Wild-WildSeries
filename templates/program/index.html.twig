{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	| Program-index
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="m-4 p-4">Nos Séries</h1>
		<div class="card-group">
			{% for program in programs %}
				<div class="col-md-3 d-flex p-2">
					<div class="card">
						<img class="card-img-top object-fit-cover" src="{{ program.poster }}" alt="{{ 'poster ' ~ program.title }}">
						<div class="card-header text-white bg-dark py-4 d-flex align-items-center justify-content-between">
							Série
							<div>
								<a class="px-3 py-2 text-decoration-none" href="{{ path("category_show", { categoryName: program.category.name }) }}">{{ program.category.name }}</a>
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag" viewbox="0 0 16 16">
									<path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z"/>
									<path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z"/>
								</svg>
							</div>
						</div>
						<div class="card-body text-white bg-primary-light">
							<h5 class="card-title text-dark fw-bold fs-3">{{ loop.index ~ ' - ' ~ program.title }}</h5>
							<p class="card-text">{{ program.synopsis }}</p>
							<p class="card-text">
								<small class="text-muted"></small>
							</p>
						</div>
						<div class="card-footer bg-primary">
							<div class="d-flex align-items-center justify-content-end">
								<a class="bottom text-white" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				Aucune série trouvée.
			{% endfor %}
		</div>
		<div class="row ">
			<div class="col p-2 m-2 d-flex align-items-center justify-content-end px-4">
				<a class="text-dark fw-bold fs-5" href="{{ path('app_index') }}">
					Retour
				</a>
			</div>
		</div>
	</div>
{% endblock %}