{% extends 'base.html.twig' %}

{% block title %}Épisodes-index
{% endblock %}

{% block body %}
	<div class="container-fluid p-md-4">
		<h1 class="mb-3 p-2">Liste Des Épisodes</h1>
		<table class="table table-sm table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Number</th>
					<th>Synopsis</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for episode in episodes %}
					<tr>
						<td>{{ episode.id }}</td>
						<td>{{ episode.title }}</td>
						<td>{{ episode.number }}</td>
						<td>{{ episode.synopsis }}</td>
						<td>
							<a href="{{ path('app_episode_show', {'id': episode.id}) }}">show</a>
							<a href="{{ path('app_episode_edit', {'id': episode.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_episode_new') }}">Ajouter Épisode</a>
	</div>
{% endblock %}