{% extends 'admin_layout.html.twig' %}

{% block title %}
	{{ parent() }}
	Épisode-Afficher
{% endblock %}
{% block admin_content_title %}Fiche de l'épisode
{% endblock %}
{% block admin_content %}
	<table class="table table-striped border-secondary bg-light mt-4 rounded-2 border border-0">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ episode.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ episode.title }}</td>
			</tr>
			<tr>
				<th>Number</th>
				<td>{{ episode.number }}</td>
			</tr>
			<tr>
				<th>Synopsis</th>
				<td>{{ episode.synopsis }}</td>
			</tr>
		</tbody>
	</table>
	<hr>
	<div class="d-flex align-items-center justify-content-between me-4">
		<a role="button" class="btn btn-outline-light text-nowrap btn-primary m-2 px-3" href="{{ path('app_episode_edit', {'id': episode.id}) }}">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewbox="0 0 16 16">
				<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
			</svg>
			Modifier
		</a>
		{{ include('episode/_delete_form.html.twig') }}
	</div>

	<div class="col d-flex align-items-center justify-content-between me-4">
		<a class="text-light text-nowrap m-2 px-3" href="{{ path('app_episode_index') }}">Retour</a>
	</div>
{% endblock %}