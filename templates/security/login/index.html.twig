{% extends 'visitor_layout.html.twig' %}

{% block title %}
	{{ parent() }}
	| Login
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row m-4 p-4">
			<div class="col-6 m-auto">
				<div class="card border-secondary border-3">
					<div class="card-header bg-secondary text-center p-4">
						<svg class="icon-person-circle" xmlns="http://www.w3.org/2000/svg" width="106" height="106" fill="currentColor" class="bi bi-person-circle" viewbox="0 0 16 16">
							<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
							<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
						</svg>
					</div>
					<div class="card-body m-2">
						<h1 class="card-title mb-2 text-center">LOGIN</h1>

						{% if error %}
							<div class="alert alert-warning" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						<form action="{{ path('app_security_login') }}" method="post">
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<div class="form-outline mb-4">
								<label for="username" class="form-label">Email</label>
								<input type="text" id="username" name="_username" class="form-control border-secondary" value="{{ last_username }}">
							</div>
							<div class="form-outline mb-4">
								<label for="password" class="form-label">Password</label>
								<input type="password" id="password" name="_password" class="form-control border-secondary" aria-labelledby="passwordHelpBlock">
								<div id="passwordHelpBlock" class="form-text">
									Votre password doit avoir une longueur de 8-20 caractères, contenir des lettres et des nombres, ne doit pas contenir d'espace, de caractères spéciaux, ou d'emoji.
								</div>
							</div>
							<div class="row mb-4">
								<div class="col d-flex justify-content-center">
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="" id="checkedConnexionRember" checked/>
										<label class="form-check-label" for="form2Example31">Se souvenir de moi</label>
									</div>
								</div>
								<div class="col">
									<a href="{{ path('app_security_forgot_password_request') }}">Mot de passe oublié ?</a>
								</div>
							</div>
							<div class="row">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<button type="submit" class="mb-4 btn btn-lg btn-primary">Connexion</button>
							</div>
							<div class="text-center">
								<p>Pas encore un membre ?
									<a href="{{ path('app_security_register') }}">S'incrire</a>
								</p>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}